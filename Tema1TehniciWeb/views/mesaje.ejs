<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Chat Viewer</title>

    <!--Stylesheet-->
    <link rel="stylesheet" type="text/css" href="style/mesaje.css">

    <!--JS scripts-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>



    <!--Fonts-->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Jura" />
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet" type="text/css">
    <link href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Gruppo" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Michroma">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Orbitron" />

    <script>
        var entry_template = "\
<li class='message' data-id='%id%'>\
        <div class='line'>\
            <div class='message_header'>\
                <span class='message_title'>%title%</span>\
                <span class='message_emoticon'><img class='emoticon_img' src='%img%'></span>\
        </div>\
                <span class='message_text'>%text%</span>\
                <span class='message_date'>%date%</span>\<% if (page.can_edit) {%>
            <div class='controls'>\
                    <span class='btn_control warning control_delete'>Delete</span>\
                </div >\<%}%>
        </div>\
</li>\
";
    </script>
    <script src="javascript/mesaje_javascript.js"></script>
</head>

<body>
    <div class="parent" data-name="<%-page.username%>">
        <ul class="message_list">
            <li class="message" data-id="-1">
                <div class="line">
                    <span class="message_text">There are no messages for this user!</span>
                </div>
            </li>
        </ul>

        <% if(page.can_edit){%>
        <div class="add_message_wrapper">
            <div class="upper_side">
                <div id="body">
                    <input id="title_message" type="text" />
                    <textarea type="text" id="text_message"></textarea>
                </div>
                
                <div id="emoticons_store">
                    <% var input_id=0;for(el of page.emoticons){input_id+=1;%>
                    <div class="emoticon_entry">
                        <input type="radio" class="emoticon_select" id="<%-input_id%>" data-src="images/<%-el%>" <%-(input_id==1)?"checked='checked'":""%> name="feeling">
                        <label for="<%-input_id%>"><img class="emoticon_img" src="images/<%-el%>" /></label><br>
                    </div>
                    <%}%>
                </div>
                <div class="controls">
                    <span class="btn_control control_send">Send</span>
                </div>
            </div>
        </div>
        <%}%>
    </div>


</body>
</html>